<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqu.crm.workbench.dao.ActivityRemarkDao">
    <select id="getCountByIds" resultType="int">
        select count(*) from tbl_activity_remark
        where activityId in
        <foreach collection="array" separator="," close=")" open="(" item="id">
            #{id}
        </foreach>
    </select>

    <delete id="deleteByIds">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" separator="," close=")" open="(" item="id">
            #{id}
        </foreach>
    </delete>

    <select id="getActivityRemarkListByAid" resultType="ActivityRemark">
        select
        *
        from tbl_activity_remark

        where activityId = #{activityId}
    </select>
</mapper>